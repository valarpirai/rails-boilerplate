<div class="">
Edit properties of flag for environment
<% form_with url: update_properties_project_feature_flag_path(@parent.uuid, @feature_flag), model: @feature_flag, class: "feature-flag-form" do |f| %>
  <div class="form-group">
    <label for="name">Name</label>
    <%= f.text_field :name, class: 'form-control' %>
    <small class="form-text text-muted">A human-friendly name for your feature.</small>
  </div>
  <div class="form-group hide">
    <label for="type">Type</label>
    <%= f.text_field :type, class: 'form-control' %>
  </div>
  <%= f.submit "Create", class: 'btn btn-primary mt-4' %>
<% end %>
</div>